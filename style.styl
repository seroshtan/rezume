base-color = #3366cc
can-color = base-color
cannot-color = #cccccc

@font-face
  font-family Myriad Pro Lightt
  src local("Myriad Pro Light"),
          url(fonts/Myriad Pro Light.ttf)

body
  margin 0
  padding 0

.wrapper
  font-family Myriad Pro Light
  display flex
  flex-wrap wrap
  flex-direction row
  margin 4%
  justify-content space-between
  font-size 1rem

.block
  min-width 310px
  min-height 220px
  box-sizing border-box

.block-left
  flex-basis 34%

.block-right
  flex-basis 53%

.block__title
  font-variant small-caps
  text-align center
  margin  0
  padding 0

.block__title_size-name
  font-size 4rem

.block__title_size-surname
  font-size 4.6rem
  font-weight bold
  margin-top  -2.5rem

.block__title_size-prof
  font-size 2rem
  font-weight bold
  margin-top  -0.7rem

.block__round2
  border-radius 50%
  width 90%
  height 90%
  background-color base-color
  margin 5% auto

.block__round1
  border-radius 50%
  width 15rem
  height 15rem
  border .2rem solid base-color
  margin 5% auto

.block__section
  color base-color
  margin-left 10%
  font-variant small-caps
  font-size 2.5rem
  font-weight bold
  display flex

.block__section::after
  content ""
  width 80%
  height 2px
  background-color base-color
  display inline
  margin-top 0.66em

.skills
  display flex
  justify-content center

.skills__circle
  width 1rem
  height 1rem
  border-radius 50%
  margin 0 0.3rem

.skills__circle_blue
  background-color can-color

.skills__circle_grey
  background-color cannot-color

.title-skills
  text-align center
  font-variant small-caps
  font-size 2rem
  margin 0.2rem

.contact-form
  display flex
  margin 0
  padding 0

.contact-form__left
  color base-color
  font-weight bold

.contact-form_style
  list-style-type none

.contact-form_indent
  margin 1.5rem 0
  font-size 1.3rem

.list
  font-size 1.1rem
  list-style none

.list__important
  font-weight bold
  margin-right 1rem

.list__important_color
  color base-color

.list__text
  font-size 1rem

.text-software
  font-variant small-caps
  font-size 2rem

.software
  display flex
  flex-wrap wrap
  flex-direction row
  justify-content space-between

.software__block
  display flex

.software__box
  width 1.5rem
  height 1rem

.software__box_blue
  background-color can-color

.software__box_grey
  background-color cannot-color

.software-list
  list-style-type none